{
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "script"
    },
    "env": {
        "browser": true
    },
    "rules": {
        "semi": [ "error", "always" ],
        "no-unused-vars": [ "warn" ],
        "no-shadow": ["error", { "hoist": "functions" }],
        "no-use-before-define": ["error", { "functions": false, "classes": false }],
        "no-var": [ "error" ],
        "quotes": ["error", "single"],
        "no-unneeded-ternary": "warn"
    }
}
